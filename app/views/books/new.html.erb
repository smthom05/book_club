<% if @book.errors %>
<ul id="errors">
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<% if @error_msg %>
  <h1> <%= @error_msg %> </h1>
<% end %>
<section class="form-wrapper" id="new-book-form-wrapper">

  <%= form_for @book do |f| %>
  <h3>Add A New Book:</h3>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <label>Author(s):</label>
    <input type="text" value="" name="book[authors]" id="book_authors"><br>

    <%= f.label :pages %>
    <%= f.number_field :pages %><br>

    <%= f.label :year_published %>
    <%= f.number_field :year_published %><br>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %><br>

    <%= f.submit %>
  <% end %>
</section>
