<h3><%= @author.name %></h3>

</section>
<% @author.books.each do |book| %>
  <section id="book-<%= book.id %>">
    <p><%= link_to book.title, book_path(book) %></p>
    <img src="<%= book.image_url %>" alt="<%= book.id %>">
    <% book.authors.each do |author| %>
      <p><%= author.name unless author.name == @author.name %></p>
    <% end %>
    <p>Page Count: <%= book.pages %></p>
    <p>Year Published: <%= book.year_published %></p>

    <section id="top-review-<%= book.id %>">
      <h5>Top Review</h5>
      <% if book.reviews.count > 0 %>
        <p> <%= book.top_review.title %> </p>
        <p> <%= book.top_review.rating %> </p>
        <p> <%= link_to book.top_review.user.name, user_path(book.top_review.user) %> </p>
      <% else %>
        <p>No Reviews Written</p>
      <% end %>
    </section>
  </section>
<% end %>
<%= link_to "Delete Author", author_path(@author), method: :delete %>
